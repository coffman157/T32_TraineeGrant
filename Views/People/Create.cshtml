@model T32_TraineeGrant.Person

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Person</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Buid" class="control-label"></label>
                <input asp-for="Buid" class="form-control"  readonly value=@ViewBag.buid/>
                <span asp-validation-for="Buid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Lastname" class="control-label"></label>
                <input asp-for="Lastname" class="form-control" readonly value=@ViewBag.lastname />
                <span asp-validation-for="Lastname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Firstname" class="control-label"></label>
                <input asp-for="Firstname" class="form-control" readonly value=@ViewBag.firstname />
                <span asp-validation-for="Firstname" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Email" class="control-label"></label>
                <input asp-for="Email" class="form-control" readonly value=@ViewBag.email />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Orcidid" class="control-label"></label>
                <input asp-for="Orcidid" class="form-control" />
                <span asp-validation-for="Orcidid" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label"> Citizenship</label>
                <select asp-for="Citizenship">
                    <option value="">Please Select</option>
                    <option value="US Citizen">US Citizen</option>
                    <option value="US National">US National</option>
                    <option value="Permanent Resident">Permanent Resident</option>
                    <option value="Other">Other</option>
                </select>
                <span asp-validation-for="Citizenship" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Are you currently a predoctoral of postdoctoral trainee?</label>
                <select asp-for="Position">
                    <option value="">Please Select</option>
                    <option value="Predoctoral Trainee">Predoctoral Trainee</option>
                    <option value="Postdoctoral Trainee">Postdoctoral Trainee</option>

                    <option value="Other">Other</option>

                </select>
                <span asp-validation-for="Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label> Other Trainee</label>
                <input asp-for="Positionother" class="form-control" />
                <span asp-validation-for="Positionother" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label> Have you been accepted officially into a lab for your dissertation research?</label>
                <input asp-for="Acceptedpredoc" class="form-control" />
                <span asp-validation-for="Acceptedpredoc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label> Who is your research faculty mentor?</label>
                <input asp-for="Facultymentor" class="form-control" />
                <span asp-validation-for="Acceptedpredoc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label> How many years have you been in this position?</label>
                <input asp-for="Yearsposition" class="form-control" />
                <span asp-validation-for="Acceptedpredoc" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
